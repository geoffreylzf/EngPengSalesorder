<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_rl"
    style="@style/SearchBarRelativeLayout">

    <TextView
        android:id="@+id/date_tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:text="@string/date"
        android:textColor="@color/colorHint"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/date_tv_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_tv_label"
        android:layout_toStartOf="@id/date_ib_button"
        android:layout_centerVertical="true"
        android:background="@color/colorTransparent"
        android:gravity="start"
        android:hint="@string/date"
        android:paddingBottom="8dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorSearchTextColor"
        android:textColorHint="@color/colorSearchHintColor"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/date_ib_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/date_tv_label"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTransparent"
        android:src="@drawable/ic_baseline_date_range_grey_24px" />

</RelativeLayout>